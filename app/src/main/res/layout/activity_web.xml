<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.zl.zlei.View.activi.WebActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:isScrollContainer="true"
            app:navigationIcon="@drawable/fab_add"
            android:id="@+id/toolbarInweb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tool_srctext"
                    android:text="xxxx"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/setting_button"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:src="@drawable/xx"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/shares_button"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/setting_button"
                    android:background="@null"
                    android:src="@drawable/xx"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_web" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/fab_mengban"
        android:background="@color/colorAccent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/floatingParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.clans.fab.FloatingActionMenu
            fab:menu_openDirection="up"
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="45dp"
            android:layout_marginStart="15dp"
            app:menu_colorNormal="@color/colorAccent"
            app:menu_colorPressed="@color/colorAccentDark"
            app:menu_icon="@android:drawable/ic_input_add"
            app:menu_labels_ellipsize="end"
            app:menu_labels_singleLine="true"
            fab:menu_labels_position="right"
            >

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccentDark"
                android:src="@drawable/xx"
                app:fab_size="mini"
                app:fab_label="刷新"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccentDark"
                android:src="@drawable/xx"
                app:fab_size="mini"
                app:fab_label="收藏"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccentDark"
                android:src="@drawable/xx"
                app:fab_size="mini"
                app:fab_label="分享"
                />
        </com.github.clans.fab.FloatingActionMenu>

        <RelativeLayout
            android:background="@color/history_border"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/ziti"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:paddingStart="10dp"
                    android:gravity="center"
                    android:background="@null"
                    android:text="A-"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <SeekBar
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="20sp"
                    android:paddingEnd="5dp"
                    android:gravity="center"
                    android:background="@null"
                    android:text="A+"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:textColor="@color/history_border"
                    android:text="默认"
                    android:paddingEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/liangdu"
                android:layout_below="@+id/ziti"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@mipmap/ic_launcher_round"
                    android:textSize="20sp"
                    android:paddingStart="10dp"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <SeekBar
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageButton
                    android:src="@mipmap/ic_launcher_round"
                    android:textSize="20sp"
                    android:paddingEnd="5dp"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:textColor="@color/history_border"
                    android:text="系统"
                    android:paddingEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_centerVertical="true"
                android:id="@+id/line"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/history_border"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <RadioGroup
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:gravity="center"
                    android:drawableTop="@mipmap/ic_launcher_round"
                    android:button="@null"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="无图模式"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:gravity="center"
                    android:drawableTop="@mipmap/ic_launcher_round"
                    android:button="@null"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="刷新"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:gravity="center"
                    android:drawableTop="@mipmap/ic_launcher_round"
                    android:button="@null"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="转屏"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </RadioGroup>
        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
