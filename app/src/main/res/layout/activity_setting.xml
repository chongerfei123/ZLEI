<?xml version="1.0" encoding="utf-8"?>


<!--当没有CollapsingToolbarLayout时：
让toolbar 自动隐藏和显示
在toolbar下：app:layout_scrollFlags = "scroll|enterAlways" :没有悬停条目
             app:layout_scrollFlags = "scroll|enterAlwaysCollapsed" ：有悬停条目
ps：有了CollapsingToolbarLayout，上面的不需要了
    当有了有了CollapsingToolbarLayout时
    app:layout_scrollFlags = "scroll|enterAlways"这个属性就加在CollapsingToolbarLayout上面
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="10dp"
        android:translationZ="5dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!--app:contentScrim="@color/colorAccent" 遮蔽的颜色
            折起来以后背景条的颜色-->
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/colorPrimaryDark"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/setting_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="设置"
                        android:textColor="#e7e4e4"
                        android:textSize="20sp" />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.example.zl.zlei.View.myview.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:bg_color="#ffffff"
                app:mainText="我的收藏"
                app:otherText=""
                app:turnImage="@drawable/ic_keyboard_arrow_right_grey_400_24dp" />

            <com.example.zl.zlei.View.myview.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:bg_color="#ffffff"
                app:mainText="清除缓存"
                app:otherText="111.11kb"
                app:turnImage="@drawable/ic_keyboard_arrow_right_grey_400_24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <com.example.zl.zlei.View.myview.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:bg_color="#ffffff"
                app:mainText="开源许可"
                app:otherText=""
                app:turnImage="@drawable/ic_keyboard_arrow_right_grey_400_24dp" />

            <com.example.zl.zlei.View.myview.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:bg_color="#ffffff"
                app:mainText="检查更新"
                app:otherText=""
                app:turnImage="@drawable/ic_keyboard_arrow_right_grey_400_24dp" />

            <com.example.zl.zlei.View.myview.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:bg_color="#ffffff"
                app:mainText="联系作者"
                app:otherText=""
                app:turnImage="@drawable/ic_keyboard_arrow_right_grey_400_24dp" />

            <com.example.zl.zlei.View.myview.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:bg_color="#ffffff"
                app:mainText="用户反馈"
                app:otherText=""
                app:turnImage="@drawable/ic_keyboard_arrow_right_grey_400_24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

        <TextView
            android:textStyle="italic"
            android:textColor="#ababab"
            android:layout_alignParentBottom="true"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Powerd by ZL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</RelativeLayout>






